<fest:template xmlns:fest="http://fest.mail.ru" context_name="json">
    <div class="inputs">
        <form id="tokenForm" method='post' class="one-field-input">
            <div class="one-field-input__inputs">
                <input type="text" id="token" class="one-field-input__inputs__input-field" placeholder="Enter a token" autocomplete="off" name="token"/>
                <input type="submit" id="connect" class="one-field-input__inputs__send-button" value="Submit" />
            </div>
        </form>
        <div id="message" class="connect-message">test</div>
    </div>
</fest:template>