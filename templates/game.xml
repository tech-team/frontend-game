<fest:template xmlns:fest="http://fest.mail.ru"
    context_name="json">
    <div id="scene" class="content-wrapper game-wrapper">
            <a href="#main" class="back-button back-button_cornered">
                <div class="left-arrow-wrapper"><div class="left-arrow" /></div>
                <span class="back-button__caption">Menu</span>
            </a>
            <div class="game-load-progress">
                <div class="progress-bar-wrapper">
                    <h2>Loading resources...</h2>
                    <progress class="progress" value="10" max="100" />
                    <b><span class="progress-value">0%</span></b>
                </div>
            </div>

            <div class="message-dimmer"></div>
            <div class="message">

                <div class="message__textbox">
                    <div class="message__textbox__text">Some text</div>
                </div>
            </div>
            <canvas id="game-field">You have a very old browser, dude.</canvas>
            <input id="token" value="guid" disabled="disabled" style="position:absolute; top:0; right:0;" />
            <!--<button id="connect" type="submit">connect</button>-->
    </div>
</fest:template>