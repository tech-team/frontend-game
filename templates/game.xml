<fest:template xmlns:fest="http://fest.mail.ru"
    context_name="json">
    <div id="scene" class="content-wrapper game-wrapper">
        <a href="#main" class="back-button back-button_cornered">
            <div class="left-arrow-wrapper"><div class="left-arrow" /></div>
            <span class="back-button__caption">Menu</span>
        </a>
        <fest:include context="json" src="./_progress.xml" />
        <fest:include context="json" src="./_message.xml" />

        <canvas id="game-field">You have a very old browser, dude.</canvas>
        <div class="mobile-connect">
            <div class="mobile-connect__header">Enter this token on your mobile device:</div>
            <div class="mobile-connect__token"><div class="loading-indicator token-loading"></div></div>
            <div class="reconnect-button">
                <img class="reconnect-button__image" src="/res/img/cross.png" width="50" height="50"></img>
            </div>
        </div>
        <div class="game-icon pause-icon image-inverted hidden">
            <img class="game-icon__pause" src="/res/img/media-pause.png"></img>
            <img class="game-icon__play" src="/res/img/media-play.png"></img>
        </div>
        <div class="game-icon mobile-icon image-inverted">
            <img src="/res/img/mobile.png"></img>
        </div>
    </div>
</fest:template>